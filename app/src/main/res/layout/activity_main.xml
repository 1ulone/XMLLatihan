<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B76FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6B76FF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="56dp"
            android:layout_gravity="right"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Search Bar -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_background"
            android:backgroundTint="#0CB4AFAF"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="Kamu mau pergi kemana?"
            android:paddingStart="16dp"
            android:textColor="@android:color/white"
            android:textColorHint="#E0E0E0" />

        <!-- Gambar Ilustrasi -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="60dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jalan" />

        <!-- Pilih Transportasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Transportasi"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Tombol Transportasi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Kereta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF1D5"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:elevation="6dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="125dp"
                    app:srcCompat="@drawable/kereta" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kereta"
                        android:textColor="#6B76FF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transportasi darat"
                        android:textColor="#6B76FF"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#6B76FF"
                        android:text="Pilih"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
