<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6B76FF"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Selamat Datang"
        android:textColor="#F6F2F2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:text="NAMA PENGGUNA"
        android:textColor="#FBF5F5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- KAI Pay Section -->
    <LinearLayout
        android:id="@+id/kaiPaySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#F6F4F4"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvKaiPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Train PAY"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Rp 0"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Button Section -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F4F4"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAntarKota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#6B76FF"
            android:drawableTop="@drawable/train_20px"
            android:text="Antar Kota" />

        <Button
            android:id="@+id/btnLokal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6B76FF"
            android:drawableTop="@drawable/directions_subway_20px"
            android:text="Lokal" />

        <Button
            android:id="@+id/btnCommuter"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6B76FF"
            android:drawableTop="@drawable/directions_railway_20px"
            android:text="LRT" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonSection2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBF6F6"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnKartuMultiTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6B76FF"
            android:drawableTop="@drawable/card_travel_20px"
            android:text="Kartu Multi Trip" />

        <Button
            android:id="@+id/btnShowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6B76FF"
            android:drawableTop="@drawable/apps_20px"
            android:text="Show More" />
    </LinearLayout>

    <!-- Promo Section -->
    <TextView
        android:id="@+id/tvPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Promo Terbaru"
        android:textColor="#F4F2F2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Bottom Navigation -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="127dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/harga_tiket_promo_kereta_cepat_whoosh_desember_2023_200370329" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="171dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/kode_promo_tiket_kereta_api" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="145dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/kode_promo_kai" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="0dp"
        android:background="#F6F6F6"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnTiketSaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6B76FF"
            android:drawableLeft="@drawable/ic_ticket"
            android:text="Tiket Saya" />

        <Button
            android:id="@+id/btnPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:backgroundTint="#6B76FF"
            android:drawableLeft="@drawable/ic_promo"
            android:gravity="center"
            android:text="Promo" />

        <Button
            android:id="@+id/btnAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#6B76FF"
            android:drawableLeft="@drawable/ic_account"
            android:text="Akun" />
    </LinearLayout>
</LinearLayout>
